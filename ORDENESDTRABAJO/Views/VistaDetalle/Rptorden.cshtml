
@{
    ViewBag.Title = "Rptorden";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>REPORTES</h2>

<br />
<button class="btn btn-primary" onclick="Descargar()">
    <i class="glyphicon glyphicon-download"></i> Descargar Reporte
</button>

<button class="btn btn-success" onclick="Mostrar()">
    <i class="glyphicon glyphicon-eye-open"></i> Mostrar Reporte
</button>


<hr />
<iframe id="frmorden" width="100%" height="550px" frameborder="0" scrolling="no"></iframe>

@section scripts{
    
    <script>

        function Descargar() {
            window.open("/VistaDetalle/descargarreporteO");
        }

        function Mostrar() {

            $("#frmorden")
            .attr("src", "/VistaDetalle/descargarreporteO")
            .load();
        }

    </script>
    
    
    }
