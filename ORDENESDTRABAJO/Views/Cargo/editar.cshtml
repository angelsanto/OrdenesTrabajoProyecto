@model ENTIDAD.CARGO

@{
    ViewBag.Title = "Editar Cargo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Cargo</h2>

<form action="@Url.Action("editar","Cargo")" method="post" id="frmcargo">

    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr /> 
        <h4>CARGO</h4>     
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_CARGO)
        <div class="form-group">   
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">CARGO</label>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                <input type="text" class="form-control" id="CARGO1" name="CARGO1" value="@Model.CARGO1" />
                @Html.ValidationMessageFor(model => model.CARGO1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success"/>
            </div>
        </div>
    </div>
    </form>

    <div>
        <a class="btn btn-danger" style="border-bottom:double" href="@Url.Action("Index","Cargo")"><i class="glyphicon glyphicon-remove"></i> Cancelar</a>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")


        <script>

            $("#frmcargo").submit(function (event) {
                event.preventDefault();

                var post_url = $(this).attr("action");
                var request_method = $(this).attr("method");
                var form_data = $(this).serializeArray();
                console.log(form_data);

                LoadingOverlayShow("#frmcargo");

                $.ajax({//AQUI EMPIEZA A CREAR
                    url: post_url,
                    type: request_method,
                    data: form_data
                }).done(function (response) {
                    console.log(response);

                    LoadingOverlayHide("#frmcargo");

                    if (response.ok) {
                        alert("Cargo Editado con Exito");
                        window.location = response.toRedirect;
                    }
                    else {
                        alert(response.msg);
                    }


                }).fail(function (jqxHR, textStatus, errorThrowm) {
                    LoadingOverlayHide("#frmcargo")
                });
            });

        </script>
    }
