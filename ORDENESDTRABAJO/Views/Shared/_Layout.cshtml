                        </ul>
                    </li>
                    }
                   
                    <li>@Html.ActionLink("Solicitud para Orden", "Index", "Solicitud")</li>   

                   @if (Request.IsAuthenticated && User.IsInRole("EmpleadoM"))
                   {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Ordenes de Trabajos <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">@Html.ActionLink("Orden Trabajo", "Index", "Orden")</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">@Html.ActionLink("Agregar Trabajos a Orden", "agregartrabajos", "VistaDetalle")</a></li>
                            <li role="separator" class="divider"></li>
