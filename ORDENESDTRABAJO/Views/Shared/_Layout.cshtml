                        </ul>
                    </li>
                    }
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Reportes <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#">@Html.ActionLink("RPT Solicitud", "Rptsolicitud", "Solicitud")</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">@Html.ActionLink("RPT Orden", "Rptorden", "VistaDetalle")</a></li>
                        </ul>
                    </li>

                  
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                  
                </ul>
                        @Html.Partial("_LoginPartial")
</div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Mi aplicación Ordenes trabajo versìon 1.9 ASP.NET Developer: ANGEL SANTOS VALDEZ</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
